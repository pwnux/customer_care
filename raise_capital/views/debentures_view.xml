<odoo>
    <record model="ir.actions.act_window" id="debentures_action">
        <field name="name">Kỳ phiếu</field>
        <field name="res_model">debentures</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="context">{'search_default_name':1, 'group_by_name':1}</field>-->
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Tạo một loại kỳ phiếu</p>
        </field>
    </record>
    <menuitem id="view_parent_all_debentures" name="Kỳ phiếu, tín phiếu, trái phiếu, CCTG"
              parent="raise_capital_root" sequence="12"/>
    <menuitem id="view_debentures_detail"
              name="Kỳ phiếu"
              action="debentures_action"
              parent="view_parent_all_debentures"
              sequence="10"/>

    <record model="ir.ui.view" id="view_debentures_tree">
        <field name="name">view.debentures.tree</field>
        <field name="model">debentures</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_debentures_form">
        <field name="name">view.debentures.form</field>
        <field name="model">debentures</field>
        <field name="arch" type="xml">
            <form>
                <group id="short_information">
                    <field name="name" string="Sản phẩm"/>
                    <field name="key_search"/>
                    <field name="key_search_2"/>
                </group>
                <hr/>
                <group id="full_information">
                    <field name="question"/>
                    <field name="content"/>
                </group>
                <hr/>
                <group>
                    <field name="document_reference"/>
                </group>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_debentures_search">
        <field name="name">view.debentures.search</field>
        <field name="model">debentures</field>
        <field name="arch" type="xml">
            <search string="Chỉ mục">
                <group expand="0" string="Group by...">
                    <filter name="name" string="Chỉ mục"
                            context="{'group_by': 'name'}"/>
                </group>
                <field name="key_search"
                       filter_domain="['|', '|', '|', '|', '|', '|', '|', '|', '|', '|', '|',
                       ('name', 'like', str(self)+'%'), ('content', 'like', str(self)+'%'),
                       ('document_reference', 'like', str(self)+'%'), ('question', 'like', str(self)+'%'),
                       ('key_search', 'like', str(self)+'%'), ('key_search_2', 'like', str(self)+'%'),
                       ('name', 'ilike', self), ('content', 'ilike', self),
                       ('document_reference', 'ilike', self), ('question', 'ilike', self),
                       ('key_search', 'ilike', self), ('key_search_2', 'ilike', self)]"/>
            </search>
        </field>
    </record>
</odoo>
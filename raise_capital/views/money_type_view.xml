<odoo>
    <record model="ir.actions.act_window" id="money_type_action">
        <field name="name">Loại tiền gửi</field>
        <field name="res_model">money.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="context">{'search_default_name':1, 'group_by_name':1}</field>-->
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Tạo một loại tiền gửi</p>
        </field>
    </record>
    <menuitem id="view_money_type_detail"
              name="Loại tiền gửi"
              action="money_type_action"
              parent="raise_capital_menu_product"
              sequence="11"/>

    <record model="ir.ui.view" id="view_money_type_tree">
        <field name="name">view.money.type.tree</field>
        <field name="model">money.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_money_type_form">
        <field name="name">view.money.type.form</field>
        <field name="model">money.type</field>
        <field name="arch" type="xml">
            <form>
                <group id="short_information">
                    <field name="name" string="Loại tiền gửi"/>
                    <field name="key_search"/>
                </group>
                <hr/>
                <group id="full_information">
                    <field name="product_procedure"/>
                </group>
                <hr/>
                <group>
                    <field name="product_object"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
<odoo>
    <record model="ir.actions.act_window" id="safety_deposit_box_action">
        <field name="name">Dịch vụ cho thuê tủ, két an toàn</field>
        <field name="res_model">safety_deposit.box</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_name':1, 'group_by_name':1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Tạo mới một loại dịch vụ cho thuê tủ, két an toàn</p>
        </field>
    </record>
    <menuitem id="view_safety_deposit_box_detail"
              name="Dịch vụ cho thuê tủ, két an toàn"
              action="safety_deposit_box_action"
              parent="view_funding_service_menu_root"
              sequence="3"/>

    <record model="ir.ui.view" id="view_safety_deposit_box_search">
        <field name="name">view.safety_deposit_box.search</field>
        <field name="model">safety_deposit.box</field>
        <field name="arch" type="xml">
            <search string="Chỉ mục">
                <group expand="0" string="Group by...">
                    <filter name="name" string="Chỉ mục"
                            context="{'group_by': 'name'}"/>
                </group>
                <field name="key_search"
                       filter_domain="['|', '|', '|', '|', '|', '|', '|', '|', '|', '|', '|',
                       ('name', 'like', str(self)+'%'), ('content', 'like', str(self)+'%'),
                       ('document_reference', 'like', str(self)+'%'), ('question', 'like', str(self)+'%'),
                       ('key_search', 'like', str(self)+'%'), ('key_search_2', 'like', str(self)+'%'),
                       ('name', 'ilike', self), ('content', 'ilike', self),
                       ('document_reference', 'ilike', self), ('question', 'ilike', self),
                       ('key_search', 'ilike', self), ('key_search_2', 'ilike', self)]"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="view_safety_deposit_box_tree">
        <field name="name">view.safety_deposit_box.tree</field>
        <field name="model">safety_deposit.box</field>
        <field name="arch" type="xml">
            <tree string="Chỉ mục">
                <field name="name" string="Chỉ mục" invisible="1"/>
                <field name="key_search"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_safety_deposit_box_form">
        <field name="name">view.safety_deposit_box.form</field>
        <field name="model">safety_deposit.box</field>
        <field name="arch" type="xml">
            <form>
                <group id="short_information">
                    <field name="name" string="Sản phẩm"/>
                    <field name="key_search"/>
                    <field name="key_search_2"/>
                    <field name="question"/>
                </group>
                <hr/>
                <group id="full_information">
                    <field name="content"/>
                </group>
                <hr/>
                <group>
                    <field name="document_reference"/>
                </group>
            </form>
        </field>
    </record>

</odoo>
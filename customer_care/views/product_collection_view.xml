<odoo>
    <record model="ir.actions.act_window" id="product_collection_action">
        <field name="name">Danh sách sản phẩm</field>
        <field name="res_model">product.collection</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_name':1, 'group_by_name':1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first product collection</p>
        </field>
    </record>

    <menuitem id="view_product_collection_detail"
              name="Sản phẩm"
              action="product_collection_action"
              parent="view_customer_care_menu_product"
              sequence="10"/>

    <record model="ir.ui.view" id="view_product_collection_tree">
        <field name="name">view.product.collection.tree</field>
        <field name="model">product.collection</field>
        <field name="arch" type="xml">
            <tree string="Chỉ mục">
                <field name="name" string="Chỉ mục" invisible="1"/>
                <field name="key_search"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_collection_form">
        <field name="name">Sản phẩm</field>
        <field name="model">product.collection</field>
        <field name="arch" type="xml">
            <form>
                <group id="short_information">
                    <field name="name" string="Tên sản phẩm"/>
                    <field name="key_search"/>
                    <field name="key_search_2"/>
                    <field name="question"/>
                </group>
                <hr/>
                <group id="full_information">
                    <field name="content"/>
                </group>
                <hr/>
                <group>
                    <field name="document_reference"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_collection_search">
        <field name="name">view.product.collection.search</field>
        <field name="model">product.collection</field>
        <field name="arch" type="xml">
            <search string="Chỉ mục">
                <group expand="0" string="Group by...">
                    <filter name="name" string="Chỉ mục"
                            context="{'group_by': 'name'}"/>
                </group>
                <field name="key_search"
                       filter_domain="['|', '|', '|', '|', '|', '|', '|', '|', '|', '|', '|',
                       ('name', 'like', str(self)+'%'), ('content', 'like', str(self)+'%'),
                       ('document_reference', 'like', str(self)+'%'), ('question', 'like', str(self)+'%'),
                       ('key_search', 'like', str(self)+'%'), ('key_search_2', 'like', str(self)+'%'),
                       ('name', 'ilike', self), ('content', 'ilike', self),
                       ('document_reference', 'ilike', self), ('question', 'ilike', self),
                       ('key_search', 'ilike', self), ('key_search_2', 'ilike', self)]"/>
            </search>
        </field>
    </record>

</odoo>
<odoo>
    <record model="ir.actions.act_window" id="reference_insurance_question_action">
        <field name="name">Câu hỏi tham khảo</field>
        <field name="res_model">reference_insurance.question</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Tạo một loại câu hỏi tham khảo</p>
        </field>
    </record>
    <menuitem id="view_reference_insurance_question_detail"
              name="Câu hỏi tham khảo"
              action="reference_insurance_question_action"
              parent="view_insurance_menu_root"
              sequence="5"/>

    <record model="ir.ui.view" id="view_reference_insurance_question_tree">
        <field name="name">view.reference_insurance_question.tree</field>
        <field name="model">reference_insurance.question</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_reference_insurance_question_form">
        <field name="name">view.reference_insurance_question.form</field>
        <field name="model">reference_insurance.question</field>
        <field name="arch" type="xml">
            <form>
                <group id="short_information">
                    <field name="name" string="Sản phẩm"/>
                    <field name="key_search"/>
                    <field name="key_search_2"/>
                </group>
                <hr/>
                <group id="full_information">
                    <field name="question"/>
                    <field name="content"/>
                </group>
                <hr/>
                <group>
                    <field name="document_reference"/>
                </group>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_reference_insurance_question_search">
        <field name="name">view.saving_deposit.search</field>
        <field name="model">reference_insurance.question</field>
        <field name="arch" type="xml">
            <search string="Chỉ mục">
                <group expand="0" string="Group by...">
                    <filter name="name" string="Chỉ mục"
                            context="{'group_by': 'name'}"/>
                </group>
                <field name="key_search"
                       filter_domain="['|', '|', '|', '|', '|', '|', '|', '|', '|', '|', '|',
                       ('name', 'like', str(self)+'%'), ('content', 'like', str(self)+'%'),
                       ('document_reference', 'like', str(self)+'%'), ('question', 'like', str(self)+'%'),
                       ('key_search', 'like', str(self)+'%'), ('key_search_2', 'like', str(self)+'%'),
                       ('name', 'ilike', self), ('content', 'ilike', self),
                       ('document_reference', 'ilike', self), ('question', 'ilike', self),
                       ('key_search', 'ilike', self), ('key_search_2', 'ilike', self)]"/>
            </search>
        </field>
    </record>
</odoo>
<odoo>
    <record model="ir.actions.act_window" id="credit_insurance_service_action">
        <field name="name">Bảo hiểm bảo an, tín dụng</field>
        <field name="res_model">credit.insurance</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_name':1, 'group_by_name':1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Tạo mới một loại bảo hiểm tín dụng, bảo an</p>
        </field>
    </record>
    <menuitem id="view_credit_insurance_service_detail"
              name="Bảo hiểm bảo an, tín dụng"
              action="credit_insurance_service_action"
              parent="view_insurance_menu_root"
              sequence="2"/>

    <record model="ir.ui.view" id="view_credit_insurance_service_search">
        <field name="name">view.credit_insurance_service.search</field>
        <field name="model">credit.insurance</field>
        <field name="arch" type="xml">
            <search string="Chỉ mục">
                <group expand="0" string="Group by...">
                    <filter name="name" string="Chỉ mục"
                            context="{'group_by': 'name'}"/>
                </group>
                <field name="key_search"
                       filter_domain="['|', '|', '|', '|', '|', '|', '|', '|', '|', '|', '|',
                       ('name', 'like', str(self)+'%'), ('content', 'like', str(self)+'%'),
                       ('document_reference', 'like', str(self)+'%'), ('question', 'like', str(self)+'%'),
                       ('key_search', 'like', str(self)+'%'), ('key_search_2', 'like', str(self)+'%'),
                       ('name', 'ilike', self), ('content', 'ilike', self),
                       ('document_reference', 'ilike', self), ('question', 'ilike', self),
                       ('key_search', 'ilike', self), ('key_search_2', 'ilike', self)]"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="view_credit_insurance_service_tree">
        <field name="name">view.credit_insurance_service.tree</field>
        <field name="model">credit.insurance</field>
        <field name="arch" type="xml">
            <tree string="Chỉ mục">
                <field name="name" string="Chỉ mục" invisible="1"/>
                <field name="key_search"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_credit_insurance_service_form">
        <field name="name">view.credit_insurance_service.form</field>
        <field name="model">credit.insurance</field>
        <field name="arch" type="xml">
            <form>
                <group id="short_information">
                    <field name="name" string="Sản phẩm"/>
                    <field name="key_search"/>
                    <field name="key_search_2"/>
                    <field name="question"/>
                </group>
                <hr/>
                <group id="full_information">
                    <field name="content"/>
                </group>
                <hr/>
                <group>
                    <field name="document_reference"/>
                </group>
            </form>
        </field>
    </record>

</odoo>